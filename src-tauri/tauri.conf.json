{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PowerClip",
  "version": "0.1.0",
  "identifier": "com.powerclip.app",
  "build": {
    "beforeDevCommand": "cd /Users/sky_miner/Documents/Project/PowerClip/frontend && bun dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd /Users/sky_miner/Documents/Project/PowerClip/frontend && bun run build.ts"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "PowerClip",
        "width": 450,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": {
          "allow": ["$APPDATA/images/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "icon": [
      "icons/icon.png"
    ]
  }
}
