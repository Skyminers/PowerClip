{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PowerClip",
  "version": "0.1.0",
  "identifier": "com.powerclip",
  "build": {
      "beforeDevCommand": "cd frontend && bun dev",
      "devUrl": "http://localhost:5173",
      "beforeBuildCommand": "cd ../frontend && bun run build.ts",
      "frontendDist": "../src-tauri/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "PowerClip",
        "width": 450,
        "height": 400,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "minWidth": 300,
        "minHeight": 200,
        "maxWidth": 800,
        "maxHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["$APPDATA/images/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
